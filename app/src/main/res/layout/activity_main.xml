<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <!-- ================= Camera Area ================= -->
        <ImageView
            android:id="@+id/cam_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@id/guideline_camera_bottom"
            app:layout_constraintEnd_toStartOf="@id/raw_view"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cam_view_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/raw_image"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/cam_view"
            app:layout_constraintEnd_toEndOf="@id/cam_view"
            app:layout_constraintStart_toStartOf="@id/cam_view"
            app:layout_constraintTop_toTopOf="@id/cam_view" />

        <ImageView
            android:id="@+id/raw_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@id/guideline_camera_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cam_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/raw_view_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/raw_image"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/raw_view"
            app:layout_constraintEnd_toEndOf="@id/raw_view"
            app:layout_constraintStart_toStartOf="@id/raw_view"
            app:layout_constraintTop_toTopOf="@id/raw_view" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_camera_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <!-- ================= Results ================= -->

        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/result"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline_camera_bottom" />

        <TextView
            android:id="@+id/metric_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:text="@string/metrics"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_text" />

        <!-- Plastic -->
        <TextView
            android:id="@+id/plastic_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:text="@string/plastic_progress"
            app:layout_constraintEnd_toStartOf="@id/bar_plastic"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/metric_text" />

        <ProgressBar
            android:id="@+id/bar_plastic"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:indeterminate="false"
            app:layout_constraintBottom_toBottomOf="@id/plastic_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.75"
            app:layout_constraintStart_toEndOf="@id/plastic_text"
            app:layout_constraintTop_toTopOf="@id/plastic_text" />

        <!-- Paper -->
        <TextView
            android:id="@+id/paper_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:text="@string/paper_progress"
            app:layout_constraintEnd_toStartOf="@id/bar_paper"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plastic_text" />

        <ProgressBar
            android:id="@+id/bar_paper"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:indeterminate="false"
            app:layout_constraintBottom_toBottomOf="@id/paper_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.75"
            app:layout_constraintStart_toEndOf="@id/paper_text"
            app:layout_constraintTop_toTopOf="@id/paper_text" />

        <!-- Metal -->
        <TextView
            android:id="@+id/metal_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:text="@string/metal_progress"
            app:layout_constraintEnd_toStartOf="@id/bar_metal"
            app:layout_constraintHorizontal_weight="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paper_text" />

        <ProgressBar
            android:id="@+id/bar_metal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:indeterminate="false"
            app:layout_constraintBottom_toBottomOf="@id/metal_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.75"
            app:layout_constraintStart_toEndOf="@id/metal_text"
            app:layout_constraintTop_toTopOf="@id/metal_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/bottom_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp">

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/stopped"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pause"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/pause" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/stop" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_restart"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/restart" />
        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp"
        android:contentDescription="@string/settings"
        android:minWidth="42dp"
        android:minHeight="42dp"
        app:srcCompat="@android:drawable/ic_menu_manage" />

    <include layout="@layout/bottom_sheet_settings" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
